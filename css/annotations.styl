.readymade-subject-viewer-container
  
  .readymade-subject-viewer
    width: 75vw
    max-width: 950px
    background: #eee
    background: rgba(256,256,230,0.75)
    
    .drawing-controls
      display: block
      background: #283f45
      text-align: right
      margin: 0
      
      h2
        display: inline-block
        width: 50%
        text-align: left
        font-size: 1em
    
      .tools
        display: inline-block
        text-align: right
        width: 50%
      
      .readymade-clickable
        background: rgba(0, 0, 0, 0.1)
        text-decoration: none
        
        &:focus
          border: 1px solid white
        
        &:hover
        &:focus
          background: rgba(0, 0, 0, 0.3)
        
    
    h3
      background: #283f45
      color: white
      font-size: 1em
      padding: .2em

.readymade-decision-tree-container
  padding-left: 0
  padding-right: .5vw

.readymade-marking-surface-container
  display: flex
  
.text-viewer
  flex: 5
  min-height: 60vh
  color: #222
  max-width: 450px
  margin: 0
  
  div
    padding: 1em

.subject-image
  flex: 3
  
  img
    width: 100%
    max-width: 500px
    
.text-selection
  background: #283f45
  margin: 0
  padding: .5em .2em
  
  button
    float: right
    padding: 0 .2em
    background: rgba(0, 0, 0, 0.1)
    font-size: 1em
    
    &:hover
      background: rgba(0, 0, 0, 0.3)

.decision-tree-choice
  margin-bottom: .5em
  
  .decision-tree-choices
    margin-top: .5em
    
.readymade-choice-clickable
  color: white
  font-size: 1em
  border: 0

.readymade-choice-label
  text-align: left
  
.highlight
  color: black
  background: #ddd
  
  &.complete
    opacity: 0.6

.annotation
  width: 100%
  background: #283f45
  
  button
    float: right
    padding: 0 .2em
    background: rgba(0, 0, 0, 0.1)
    font-size: 1em
    
    &:hover
      background: rgba(0, 0, 0, 0.3)
  
  ul
    text-align: left
    margin: 0
    padding: 0
    text-indent: 0
    
    li
      margin-bottom: 2px

button[disabled]
  opacity: 0.5
  
.comments
  position: absolute
  background: #222
  background: rgba(32,32,32,0.75)
  min-width: 15em
  max-width: 20em
  padding: 0
  border-radius: 6px
  text-align: left
  
  h4
    text-align: center
  
  ul
    list-style-type: none
    margin: 0
    padding: 1em
    text-indent: 0
  
  textarea
    width: 100%
  
  button
    margin: 0
    width: 100%
    
  form
    margin: 0

.reports

    ul
      list-style-type: none
      margin: 1em 0 0
      padding: 0
      text-indent: 0
  
      li
        display: inline-block
        width: 20%
        
        a
          color: white
          text-decoration: none
          padding: 1em
          margin-right: 1em
          border-radius: 5px
          display: inline-block
          width: 80%
          vertical-align: middle
          text-align: left
          color: #fff
          background: #000
          background: rgba( 0, 0, 0, .2)
          border: 1px solid transparent

          &:hover
          &:focus
            background: #000

.column
  background: #000
  background: rgba(0, 0, 0, .4)
  padding: 1em

#profile

  .item
    width: 240px
    height: 240px
    display: inline-block
    text-align: center
    vertical-align: middle
  
    a
      display: inline-block
      background: #000
      background: rgba( 0, 0, 0, .2)
      border: 1px solid transparent
      border-radius: 5px
      padding: 1em
      width: 200px
      height: 200px
    
      &:hover
      &:focus
        background: #000
  
      img
        max-height: 200px
        max-width: 200px
        position: relative
        top: 50%
        transform: translateY(-50%)

.scroll-container
  max-height: 90vh
  overflow: scroll
  
.decision-tree-task
.readymade-classification-summary
.task-instructions
.annotation-summary
  padding: .5em
  border-radius: .5em
  background: #333
  background: rgba(0, 0, 0, 0.5)
  margin-bottom: .5em

.annotation-summary
  margin-bottom: 1em
  
  h2
    font-size: 1em
    background: #283f45
    margin-bottom: 0
    padding: .5em
    
    & + p
      margin-top: 0
      text-align: center

