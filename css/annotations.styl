.readymade-subject-viewer-container
  
  .readymade-subject-viewer
    width: 75vw
    max-width: 950px
    background: #eee
    background: rgba(256,256,230,0.75)
    
    .drawing-controls
      display: block
      background: #283f45
      text-align: right
      margin: 0
      
      .readymade-clickable
        background: rgba(0, 0, 0, 0.1)
        
        &:hover
        &:focus
          background: rgba(0, 0, 0, 0.3)
        
    
    h3
      background: #283f45
      color: white
      font-size: 1em
      padding: .2em

.readymade-decision-tree-container
  padding-left: 0
  padding-right: .5vw
  
.text-viewer
  width: 30vw
  min-height: 60vh
  color: #222
  max-width: 30em
  margin: 0
  
  div
    padding: 1em

.subject-image
  width: 45vw
  max-width: 500px
  
  img
    width: 100%
    
    

.readymade-choice-clickable
  color: white
  font-size: 1em
  border: 0

.readymade-choice-label
  text-align: left
  
.highlight
  color: black
  background: #ddd
  
  &.complete
    opacity: 0.6

.annotation
  width: 100%
  text-align: center
  background: #222
  background: rgba(32,32,32,0.75)
  
  ul
    text-align: left
    margin: 0
    padding: 0
    text-indent: 0
    
    li
      margin-bottom: 2px

button[disabled]
  opacity: 0.5
  
.comments
  position: absolute
  background: #222
  background: rgba(32,32,32,0.75)
  min-width: 15em
  max-width: 20em
  padding: 0
  border-radius: 6px
  text-align: left
  
  h4
    text-align: center
  
  ul
    list-style-type: none
    margin: 0
    padding: 1em
    text-indent: 0
  
  textarea
    width: 100%
  
  button
    margin: 0
    width: 100%
    
  form
    margin: 0

