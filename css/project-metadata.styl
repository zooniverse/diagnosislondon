.project-metadata
  background: #000
  background: rgba(0, 0, 0, .8)
  min-height: 199px
  padding: 2em 3vw
  text-align: center
  width: 94vw
  margin-bottom: -20px
  margin-top: 5em
  margin-left: -47vw
  left: 42vw
  position: relative
    
  .project-metadata-header
    font-weight: 400
    margin: 0 0 2em
    text-transform: capitalize
    
    .project-name
      font-weight: 700
      text-transform: capitalize
      
  .project-metadata-container
    align-items: center
    display: flex
    flex-wrap: wrap
    justify-content: space-around
    margin: 0 auto
    max-width: 960px
    width: 100%
    
    .project-metadata-section-header
      font-weight: 400
      margin: 0
      text-transform: capitalize
      display: block
      
    .project-metadata-number
      font-size: 2em
      font-weight: 700
      margin: 0
      display: block